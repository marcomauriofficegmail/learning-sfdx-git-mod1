<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global" controller="testNamespace">
    
    <aura:attribute name="userName" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div class="slds-box">
        <aura:if isTrue="{!!empty(v.userName)}" >
            {!v.userName}
        </aura:if>
    </div>
</aura:component>